<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hinhnen4"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton

            android:id="@+id/imglongvu"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:backgroundTint="@android:color/holo_red_light"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:src="@drawable/chim"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/imgthunuoi"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:backgroundTint="@android:color/holo_orange_light"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:src="@drawable/thunuoi"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@drawable/bovien1"
            android:gravity="center"
            android:text="Lông vũ"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@drawable/bovien1"
            android:gravity="center"
            android:text="Thú nuôi"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgthurung"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:backgroundTint="?android:attr/colorFocusedHighlight"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:src="@drawable/thurung"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/imgdongco"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:backgroundTint="@android:color/holo_green_light"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:src="@drawable/dongco"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@drawable/bovien1"
            android:gravity="center"
            android:text="Thú rừng"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@drawable/bovien1"
            android:gravity="center"
            android:text="Đồng cỏ"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imgduoinuoc"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:backgroundTint="@android:color/holo_blue_light"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:src="@drawable/duoinuoc"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/imgkhac"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:backgroundTint="@android:color/holo_red_light"
            android:onClick="onClick"
            android:scaleType="fitXY"
            android:src="@drawable/contrung"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@drawable/bovien1"
            android:gravity="center"
            android:text="Dưới nước"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@drawable/bovien1"
            android:gravity="center"
            android:text="Khác"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>
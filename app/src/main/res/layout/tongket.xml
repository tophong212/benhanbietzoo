<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="728dp"

    android:background="@drawable/tongket"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_marginTop="50dp"
        android:layout_width="200dp"
        android:layout_height="140dp"
        android:src="@drawable/chienthang">

    </ImageView>

    <TextView
        android:id="@+id/tvketthuc"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:gravity="center"
        android:padding="15dp"
        android:text="Chúc mừng bé đã hoàn thành bài kiểm tra "
        android:textColor="#F62323"
        android:textSize="35sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="300dp"
            android:layout_height="120dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="Hãy cố gắng nhiều hơn nhé"
            android:textColor="#FF5722"
            android:textSize="30dp"
            android:textStyle="bold" />

    </LinearLayout>
        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/btnFinish"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:background="@drawable/bovien"
            android:text="Thoát"
            android:textSize="20sp"
            android:textStyle="bold" />

</LinearLayout>
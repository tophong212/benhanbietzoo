<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nen"
    android:gravity="center"
    android:orientation="vertical">


    <ImageButton
        android:id="@+id/imgdongvat"
        android:layout_width="190dp"
        android:layout_height="180dp"
        android:backgroundTint="@android:color/holo_green_light"
        android:onClick="OnClick"
        android:scaleType="fitXY"
        android:src="@drawable/tgdv"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Các động vật"
        android:textSize="25dp"
        android:textColor="#CF4A4A"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imgkiemtra"
        android:layout_width="190dp"
        android:layout_height="180dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@android:color/holo_blue_light"
        android:onClick="OnClick"
        android:scaleType="fitXY"
        android:src="@drawable/kiemtra"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:text="Trò chơi"
        android:textStyle="bold"
        android:textSize="28dp"
        android:textColor="#2B4CAF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hinhnen1"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvten"
        android:layout_width="320dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/bovien"
        android:gravity="center"
        android:text="Con mÃ¨o"
        android:textColor="#15288F"
        android:textSize="35sp" />

    <ImageView
        android:id="@+id/anhct"
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        android:src="@drawable/meo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/nghetiengkeu"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bovien1"
            android:src="@drawable/loa"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/ngheten"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bovien1"
            android:src="@drawable/doc"
            tools:ignore="SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/trangchu"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bovien1"
            android:src="@drawable/ttrangchu"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>
</LinearLayout>